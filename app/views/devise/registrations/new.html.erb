<div class="sign-in-1">
  <h3>Únete a R Con Erre</h3>
  <p>Regístrate con nosotros.</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, :placeholder => "Dirección de correo electrónico" %>
    </div>

    <div class="field">
      <% if @validatable %>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Crea una contraseña (mínimo 8 caracteres)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirma tu contraseña" %>
    </div>

    <div class="actions">
      <%= f.submit "Regístrate" %>
    </div>

    <div class="terms">
      <p>Al registrarte aceptas nuestros <%= link_to "Términos y condiciones", terms_path, target: "_blank" %>
      </div>

  <% end %>

  <%= render "devise/shared/links" %>


</div>